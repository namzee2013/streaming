<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Streaming</title>
    <link rel="stylesheet" href="libs/bootstrap.min.css">
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1>You</h1>
          <video id="localStream" width="300" controls></video>
          <div class="form-group">
            <label class="label-control">My Signal Token: </label>
            <textarea id="txtMySignal" class="form-control" rows="3" cols="100"></textarea><br><br>
          </div>
          <div class="form-group">
            <input id="txtFriendSignal" type="text" placeholder="Your friend's token" class="form-control"><br>
            <button type="button" id="btnConnect" name="button" class="btn btn-primary">Connect</button>
          </div>
        </div>
        <div class="col-md-6">
          <h1>Friend</h1>
          <video id="friendStream" width="300" controls></video><br>
        </div>
      </div>




    </div>

    <script src="bundle.js" type="text/javascript"></script>
    <script src="libs/jquery.js" type="text/javascript"></script>
    <script src="libs/bootstrap.min.js"></script>
  </body>
</html>
